<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- 设置填充的颜色 -->
    <solid android:color="#e6e7e7"/>
    <!-- 设置4个角的弧形半径 -->
    <corners android:radius="8dp"/>
    <!-- 设置文字与按钮边界的间隔 -->
    <padding
        android:left="15dp"
        android:right="15dp"
        android:top="10dp"
        android:bottom="10dp"
        />
</shape>